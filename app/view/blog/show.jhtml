<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
		<meta name="viewport" content="width=480"/>
		<title>chan@sikho.ca</title>
		<link href="/css/default.css" media="screen" rel="Stylesheet" type="text/css"/>
	</head>
	<body>
		<div id="main">
			<div>
				<span id="heading"><%= params["model"].title; %></span>
				<br/>
	        	<b>posted:</b> <%= params["model"].date; %>
	        	<b>tags:</b>
        		<%
        		require("util/common.js")
        		params["tags"].map(function(e) {
        			return "<a href=\"/blog/show/" + e + "\">" + e + "</a>"
        		})
        		
				echo(params["tags"].join(" "))
				%>
        	</div>
        	
        	<a href="<%= params["model"].original %>">
				<img  src="/blog/<%= params["model"].key.toString() %>/p.jpg"/>
			</a>
		</div>
		<script src="/js/jquery-1.2.6.min.js" type="text/javascript"></script>
		<script src="/js/ui.js" type="text/javascript"></script>
		<div id="stream">
			<div>
				<span id="heading">
					tagged as
					<select onchange="nav(this)">
						<%
		        		require("util/common.js")
		        		params["cloud"].map(function(e) {
		        			return "<option " + (e == params["type"] ? "selected=\"true\">" : ">") + e + "</option>"
		        		})
		        		echo(params["cloud"].join(" "))
						%>	
					</select>
				</span>
			</div>
			<%
			params["thumbs"].forEach(function(thumb) {
				echo("<a href=\"/blog/show/" + params["type"] + "/" + thumb + "\">");
				echo("<img src=\"/blog/" + thumb + "/t.jpg\"/>");
				echo("</a>\n");
			});
			%>
		</div>
	</body>
</html>